{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "framework": null,
  "functions": {
    "api/server.ts": {
      "maxDuration": 60
    }
  },
  "rewrites": [
    {
      "source": "/mcp",
      "destination": "/api/server"
    },
    {
      "source": "/mcp/:path*",
      "destination": "/api/server"
    }
  ]
}
